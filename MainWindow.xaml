<Window x:Class="DesktopOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="桌面收纳盒"
        Width="420" Height="520"
        MinWidth="300" MinHeight="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        MouseMove="Window_MouseMove"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">

    <Window.Resources>
        <!-- 悬浮球按钮样式：使用 tubiao.jpg 图片 -->
        <Style x:Key="FloatButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="BtnScale" ScaleX="1" ScaleY="1"/>
                            </Grid.RenderTransform>
                            <!-- 外发光 -->
                            <Ellipse Fill="Transparent">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#667EEA" BlurRadius="18" ShadowDepth="0" Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <!-- 图片圆形裁剪 -->
                            <Ellipse x:Name="MainCircle">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="tubiao.jpg" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <!-- 高亮遮罩 (悬浮时) -->
                            <Ellipse x:Name="HoverOverlay" Fill="#00FFFFFF" Opacity="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="1.12" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="1.12" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.15" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 快捷方式卡片按钮样式 -->
        <Style x:Key="ShortcutCardStyle" TargetType="Border">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{StaticResource CardBg}"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="{StaticResource CardHoverBg}"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 自定义 Slider 滑块样式：圆形发光滑块 -->
        <Style x:Key="SliderThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Grid>
                            <!-- 外发光 -->
                            <Ellipse Width="18" Height="18" Fill="#667EEA" Opacity="0.3">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="6"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <!-- 主圆 -->
                            <Ellipse Width="14" Height="14" Fill="#667EEA" Stroke="#8B9CF7" StrokeThickness="1.5"/>
                            <!-- 内圆点 -->
                            <Ellipse Width="5" Height="5" Fill="White" Opacity="0.9"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 自定义 Slider 样式：渐变轨道 + 圆形滑块 -->
        <Style TargetType="Slider">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <!-- 底部轨道 -->
                            <Border Height="4" CornerRadius="2" Background="#25FFFFFF" Margin="9,0"/>
                            <!-- 已选择轨道 -->
                            <Canvas ClipToBounds="True" Height="4" Margin="9,0">
                                <Border x:Name="TrackFill" Height="4" CornerRadius="2"
                                        Width="{TemplateBinding ActualWidth}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#667EEA" Offset="0"/>
                                            <GradientStop Color="#764BA2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Canvas>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 自定义 ScrollBar 滑块样式 -->
        <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border CornerRadius="3" Background="#40FFFFFF" Margin="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 自定义竖向 ScrollBar 样式：超窄半透明 -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="MinWidth" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 自定义 ComboBox 样式：暗色下拉框 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#25FFFFFF"/>
            <Setter Property="Foreground" Value="#B0BEC5"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

    </Window.Resources>

    <!-- 最外层 Grid 填充 #01 透明色，确保鼠标事件可命中整个窗口区域 -->
    <Grid Background="#01000000"
          MouseLeftButtonDown="DragArea_MouseLeftButtonDown">

        <!-- 整体布局：悬浮球在左上角，面板在下方展开 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部栏：悬浮球 + 标题（整条可拖拽） -->
        <Grid Grid.Row="0" Margin="0,0,0,4" Background="#01000000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 悬浮球按钮：按住拖拽=移动窗口，点击=切换面板 -->
            <Button x:Name="FloatButton"
                    Style="{StaticResource FloatButtonStyle}"
                    PreviewMouseLeftButtonDown="FloatButton_MouseLeftButtonDown"
                    PreviewMouseMove="FloatButton_MouseMove"
                    PreviewMouseLeftButtonUp="FloatButton_MouseLeftButtonUp"
                    Grid.Column="0" Margin="8,8,4,8"/>

            <!-- 标题 (面板展开时显示) -->
            <TextBlock x:Name="TitleText" Grid.Column="1"
                       Text="桌面收纳盒" FontSize="16" FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       VerticalAlignment="Center" Margin="8,0,0,0"
                       Visibility="Collapsed"/>

            <!-- 控制按钮 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        VerticalAlignment="Top" Margin="0,12,12,0"
                        x:Name="ControlButtons" Visibility="Collapsed">
                <!-- 设置按钮 -->
                <Button Content="⚙" FontSize="14" Width="28" Height="28"
                        Background="Transparent" Foreground="#94A3B8"
                        BorderThickness="0" Cursor="Hand"
                        Click="SettingsButton_Click"/>
                <!-- 最小化（折叠面板）-->
                <Button Content="─" FontSize="12" Width="28" Height="28"
                        Background="Transparent" Foreground="#94A3B8"
                        BorderThickness="0" Cursor="Hand"
                        Click="MinimizeButton_Click"/>
                <!-- 退出 -->
                <Button Content="✕" FontSize="12" Width="28" Height="28"
                        Background="Transparent" Foreground="#94A3B8"
                        BorderThickness="0" Cursor="Hand"
                        Click="CloseButton_Click" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 展开面板 -->
        <Border x:Name="PanelBorder" Grid.Row="1"
                CornerRadius="16" Margin="8,0,8,8"
                Visibility="Collapsed"
                RenderTransformOrigin="0.5,0">
            <Border.RenderTransform>
                <ScaleTransform x:Name="PanelScale" ScaleX="1" ScaleY="1"/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush Color="{StaticResource PanelBg}"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="4" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 快捷方式列表区域（主页） -->
                <ScrollViewer x:Name="ShortcutsScrollViewer" Grid.Row="0" VerticalScrollBarVisibility="Auto"
                              Margin="8,8,8,4">
                    <WrapPanel x:Name="ShortcutsPanel"
                               Orientation="Horizontal"
                               HorizontalAlignment="Center"/>
                </ScrollViewer>

                <!-- 设置面板（默认隐藏） -->
                <ScrollViewer x:Name="SettingsPanel" Grid.Row="0" VerticalScrollBarVisibility="Auto"
                              Margin="12,8,12,4" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="⚙️ 设置" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,4,0,12"/>

                        <!-- 设置项 1：记住窗口位置 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📍 记住窗口位置" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="下次启动时恢复上次退出的位置" FontSize="10" Foreground="#7094A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="RememberPositionToggle" Grid.Column="1"
                                          VerticalAlignment="Center"
                                          Click="RememberPositionToggle_Click"/>
                            </Grid>
                        </Border>

                        <!-- 设置项 2：开机自启 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="🚀 开机自启" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="系统启动时自动运行桌面收纳盒" FontSize="10" Foreground="#7094A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="AutoStartToggle" Grid.Column="1"
                                          VerticalAlignment="Center"
                                          Click="AutoStartToggle_Click"/>
                            </Grid>
                        </Border>

                        <!-- 设置项 3：更换悬浮球图片 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="🎨 悬浮球图片" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock x:Name="BallImagePathText" Text="默认图片" FontSize="10" Foreground="#7094A3B8" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="更换" FontSize="11" Padding="10,4"
                                            Background="#30667EEA" Foreground="#667EEA"
                                            BorderThickness="0" Cursor="Hand"
                                            Click="ChangeBallImage_Click"/>
                                    <Button x:Name="ResetBallImageBtn" Content="重置" FontSize="11" Padding="10,4" Margin="6,0,0,0"
                                            Background="#20FF6B6B" Foreground="#FF6B6B"
                                            BorderThickness="0" Cursor="Hand"
                                            Click="ResetBallImage_Click" Visibility="Collapsed"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- 设置项 4：悬浮球大小 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="📐 悬浮球大小" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}" Grid.Column="0"/>
                                    <TextBlock x:Name="BallSizeValueText" Text="56 px" FontSize="12" Foreground="#667EEA"
                                               Grid.Column="1" VerticalAlignment="Center"/>
                                </Grid>
                                <Slider x:Name="BallSizeSlider" Minimum="36" Maximum="96" Value="56"
                                        TickFrequency="4" IsSnapToTickEnabled="True"
                                        Margin="0,8,0,0"
                                        ValueChanged="BallSizeSlider_ValueChanged"/>
                            </StackPanel>
                        </Border>

                        <!-- 设置项 5：盒子展开特效 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="✨ 展开特效" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="切换盒子打开时的动画效果" FontSize="10" Foreground="#7094A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                                <ComboBox x:Name="EffectComboBox" Grid.Column="1" Width="110"
                                          VerticalAlignment="Center"
                                          SelectionChanged="EffectComboBox_SelectionChanged">
                                    <ComboBoxItem Content="🔲 缩放" Tag="Scale"/>
                                    <ComboBoxItem Content="⬇️ 下滑" Tag="SlideDown"/>
                                    <ComboBoxItem Content="➡️ 右滑" Tag="SlideRight"/>
                                    <ComboBoxItem Content="🎾 弹性" Tag="Bounce"/>
                                    <ComboBoxItem Content="🔄 旋转" Tag="Rotate"/>
                                    <ComboBoxItem Content="🌫️ 淡入" Tag="Fade"/>
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- 分割线 -->
                        <Border Height="1" Background="#20FFFFFF" Margin="0,4,0,8"/>
                        <TextBlock Text="🖥️ 桌面管理" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>

                        <!-- 设置项 6：隐藏桌面图标 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="🙈 隐藏桌面图标" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="隐藏桌面上的所有图标" FontSize="10" Foreground="#7094A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="HideDesktopToggle" Grid.Column="1"
                                          VerticalAlignment="Center"
                                          Click="HideDesktopToggle_Click"/>
                            </Grid>
                        </Border>

                        <!-- 设置项 7：一键扫描桌面 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="🔍 扫描桌面图标" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="扫描桌面快捷方式并自动归类导入" FontSize="10" Foreground="#7094A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                                <Button Content="扫描导入" FontSize="11" Padding="10,4"
                                        Background="#30667EEA" Foreground="#667EEA"
                                        BorderThickness="0" Cursor="Hand"
                                        Click="ScanDesktopButton_Click"
                                        Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- 设置项 8：一键自动归类 -->
                        <Border Background="#15FFFFFF" CornerRadius="10" Padding="14,10" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📂 一键自动归类" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="智能识别已有快捷方式并分组显示" FontSize="10" Foreground="#7094A3B8" Margin="0,2,0,0"/>
                                </StackPanel>
                                <Button Content="自动归类" FontSize="11" Padding="10,4"
                                        Background="#3050C878" Foreground="#50C878"
                                        BorderThickness="0" Cursor="Hand"
                                        Click="AutoCategorizeButton_Click"
                                        Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- 拖拽提示区域 -->
                <Border x:Name="DropZone" Grid.Row="1"
                        CornerRadius="12" Margin="12,4,12,12"
                        MinHeight="70"
                        BorderThickness="2"
                        AllowDrop="True"
                        Drop="DropZone_Drop"
                        DragEnter="DropZone_DragEnter"
                        DragLeave="DropZone_DragLeave"
                        DragOver="DropZone_DragOver"
                        MouseLeftButtonDown="DropZone_MouseLeftButtonDown">
                    <Border.BorderBrush>
                        <SolidColorBrush x:Name="DropZoneBorderBrush" Color="#40667EEA"/>
                    </Border.BorderBrush>
                    <Border.Background>
                        <SolidColorBrush x:Name="DropZoneBgBrush" Color="#10667EEA"/>
                    </Border.Background>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="📥" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="DropZoneText"
                                   Text="拖入 .lnk 或 .exe 文件"
                                   FontSize="11" Foreground="#7094A3B8"
                                   HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
