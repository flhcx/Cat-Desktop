<Application x:Class="DesktopOrganizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- 全局颜色资源 -->
        <Color x:Key="AccentColor">#667EEA</Color>
        <Color x:Key="AccentColorDark">#5A67D8</Color>
        <Color x:Key="PanelBg">#E8202535</Color>
        <Color x:Key="CardBg">#B0283040</Color>
        <Color x:Key="CardHoverBg">#C03A4A5E</Color>
        <Color x:Key="TextPrimary">#F0F4F8</Color>
        <Color x:Key="TextSecondary">#94A3B8</Color>
        
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    </Application.Resources>
</Application>
